{
	"env": {
		"browser": true,
		"es2021": true
	},

	"extends": [
		"next/core-web-vitals",
		"eslint:recommended",
		"plugin:prettier/recommended"
	],

	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},

	"rules": {
		"prettier/prettier": ["warn", { "endOfLine": "auto" }],
		"no-var": "error",
		"prefer-const": "warn",
		"no-unused-vars": "warn",
		"no-console": "warn",
		"no-alert": "warn"
	}
}
